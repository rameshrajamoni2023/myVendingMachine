        <Label x:Name="lblCurr" Content="Label" HorizontalAlignment="Left" Height="30" Margin="35,113,0,0" VerticalAlignment="Top" Width="35" Grid.Column="1"/>
        <Button x:Name="Reload" Content="Refresh" HorizontalAlignment="Left" Margin="133,22,0,0" VerticalAlignment="Top" Width="79" Height="39" Click="Reload_Click" Grid.Column="1"/>
