        <Button x:Name="btnProduct_11" Content="Button" Click="Button_Click" HorizontalAlignment="Left" Margin="276,291,0,0" VerticalAlignment="Top" Height="89" Width="75"/>
        <Button x:Name="btnProduct_12" Content="Button" Click="Button_Click" HorizontalAlignment="Left" Margin="362,291,0,0" VerticalAlignment="Top" Height="89" Width="76"/>
